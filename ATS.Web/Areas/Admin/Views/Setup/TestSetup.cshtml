
@{
    ViewBag.Title = "TestSetup";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-edit"></i>Test Setup</h1>
        <p>Setup form for Test</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item"><a href="#">Test Setup</a></li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12" id="testContext">
        <div class="tile">
            <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Category</label>
                        <select class="form-control " id="categoryType"></select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Level</label>
                        <select class="form-control " id="levelType"></select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Type</label>
                        <select class="form-control " id="testType"></select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Marks</label>
                        <input class="form-control " id="testMarks" type="number" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control testDescription" cols="40" rows="5" id="testDescription" ></textarea>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label style="text-align:match-parent">Instruction</label>
                        <textarea class="form-control testInstruction" cols="40" rows="5" id="testInstruction" ></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Duration</label>
                        <input class="form-control testDuration" type="number" id="testDuration"  />
                    </div>
                </div>
            </div>

            <div class="tile-footer">
                <button class="btn btn-primary" type="button" id="btnCreateTest">Create</button>
                <button class="btn btn-primary" type="button" id="btnUpdateTest" style="display:none">Update</button>
                <button class="btn btn-primary" type="reset" id="btnClearTest">Clear</button>
                <span class="errorMsg" style="display:none"></span>
                <span class="successMsg" style="display:none"></span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 tile">
        <h3 class="tile-title">Test List</h3>

        <div class=" tableContext">

        </div>
    </div>
</div>

@section scripts {
    <script src="~/CommonTask/AppConstant"></script>
    <script src="~/Scripts/module/test-setup/test-setup.js"></script>
    <script>
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
        (function ($, window, document) {
            $(function () {
                var config = {
                    selectCategory: '#categoryType',
                    selectLevel: '#levelType',
                    selectTestType: '#testType',
                    createTest: '#btnCreateTest',
                    testContext: '#testContext',
                    testMarks: '#testMarks',
                    testDescription: '#testDescription',
                    testInstruction: '#testInstruction',
                    testDuration: '#testDuration',
                    testTableContext:'.tableContext',
                };
                testBankSetup.init(config);

            });

        }(window.jQuery, window, document));
    </script>

}