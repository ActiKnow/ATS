
@{
    ViewBag.Title = "UserApproval";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="app-title">
    <div>
        <h1><i class="fa fa-free-code-camp"></i> User Approval</h1>
        <p>You can approve a user by form below.</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item"><a href="#">User Approval</a></li>
    </ul>
</div>
@using (Html.BeginForm("UserSetup", "UserSetup", FormMethod.Post,new { @id="submitForm" }))
{
<input type="hidden" name="userID" id="selectedUserId" />
<div id="msgContext"></div>
<div class="row">
    <div class="col-md-12">
        <div class="tile" id="userApprovalContext">
            <div class="tile-title-w-btn">
                <h3 class="title">Users List</h3>
            </div>
            <hr />
            <div class="tile-body">
                <table class="table table-hover table-bordered" id="userTable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>Created On</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                </div>
            </div>
    </div>
</div>
}
@section scripts
{
    <script src="~/Scripts/module/user-setup/user-approval.js"></script>
    <script>
    (function ($, window, document) {
        $(function () {
            var config = {
                firstName:'.firstName',
                lastName:'.lastName',
                mobile:'.mobile',
                email: '.email',
                //password: '.password',
                ddlRoleType: '.roleType',
                msgContext: '#msgContext',
                tableContext: '#userApprovalContext',
                tableId:"#userTable",
                btnEditUser: '.btnEditUser',
                btnRemoveUser: '.btnRemoveUser',
                userId: '.userId',
                roleTypeId: '.roleTypeId', 
                submitForm: '#submitForm',
                selectedUserId: '#selectedUserId',
                hiddenId: '.hiddenId',
            };
            userApproval.init(config);
        });

    }(window.jQuery, window, document));
    </script>

}