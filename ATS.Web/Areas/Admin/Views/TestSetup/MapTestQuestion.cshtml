
@{
    ViewBag.Title = "MapTestQuestion";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="app-title">
    <div>
        <h1><i class="fa fa-free-code-camp"></i> Map Test Question</h1>
        <p>Map form for Test with Question</p>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item"><a href="#">Map Test Question</a></li>
    </ul>
</div>
<div id="mainMessageContext"></div>

<div class="row" id="testContext">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h5 class="title">Test Detail</h5>
                <p>
                    <button type="button" class="btn btn-primary" id="btnOpenSelectTest"><i class="fa fa-fw fa-lg fa-check-circle"></i>Select Test</button>
                </p>
            </div>
            <div class="tile-body ui-test-context">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Description</label>
                            <input type="text" class="form-control" readonly="readonly" id="selectedTestDesc"/>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Category</label>
                            <input type="text" class="form-control" readonly="readonly" id="selectedTestCategory"/>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Type</label>
                            <input type="text" class="form-control" readonly="readonly" id="selectedTestType"/>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Level</label>
                            <input type="text" class="form-control" readonly="readonly" id="selectedTestLevel"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" id="quesContext">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h5 class="title">Mapped Question list</h5>
                <p>
                    <button type="button" class="btn btn-primary" id="btnOpenSelectQues"><i class="fa fa-fw fa-lg fa-check-circle"></i>Select Question</button>
                </p>
            </div>
            <hr />
            <div class="tile-body testQuestionsContext">
                <table class="table table-striped table-sm table-bordered table-hover" id="tblTestQuestions">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th> Qestion Description</th>
                            <th>Category</th>
                            <th>Type</th>
                            <th>Level</th>
                            <th>Marks</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalSelectTestContext" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content validate-test-form" id="selectTestContext">
            <div class="modal-header">
                <h5 class="title">Select Test</h5>
                <button type="button" class="close cancel-select-test">×</button>
            </div>
            <div class="modal-body">
                <div id="testMessageContext"></div>
                <div class="col-md-12" id="testDataContext">
                    <table class="table table-striped table-sm table-bordered table-hover" id="tblTestRecord">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> Test Description (Marks / Duration)</th>
                                <th>Category</th>
                                <th>Type</th>
                                <th>Level</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<div class="modal" id="modalSelectQuesContext" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content validate-ques-form" id="selectQuesContext">
            <div class="modal-header">
                <h5 class="title">Select Questions</h5>
                <button type="button" class="close cancel-select-ques">×</button>
            </div>
            <div class="modal-body">
                <div id="quesMessageContext"></div>
                <div class="col-md-12" id="quesDataContext">
                    <table class="table table-striped table-sm table-bordered table-hover" id="tblQuesRecord">
                        <thead>
                            <tr>
                                <th class="no-sort"><input type="checkbox" id="selectAllQuestion"/></th>
                                <th> Qestion Description</th>
                                <th>Category</th>
                                <th>Type</th>
                                <th>Level</th>
                                <th>Marks</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddQuestion"><i class="fa fa-fw fa-lg fa-check-circle"></i>Map Question</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/module/test-setup/map-test-question.js"></script>
    <script>
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
        (function ($, window, document) {
            $(function () {
                var config = {
                    openSelectTest: '#btnOpenSelectTest',
                    openSelectQues: '#btnOpenSelectQues',
                    modalSelectTestContext: '#modalSelectTestContext',
                    modalSelectQuesContext: '#modalSelectQuesContext',
                    testContext: '#testContext',
                    quesContext: '#quesContext',
                    closeSelectQues: '.cancel-select-ques',
                    closeSelectTest: '.cancel-select-test',
                    selectQuesContext: '#selectQuesContext',
                    selectTestContext: '#selectTestContext',
                    testDataContext: '#testDataContext',
                    tblTestRecord: '#tblTestRecord',
                    testId: 'testId',
                    testDesc: 'testDesc',
                    testCategory: 'testCategory',
                    testLevel: 'testLevel',
                    testType: 'testType',
                    testStatus: 'testStatus',
                    quesId: 'quesId',
                    quesDesc: 'quesDesc',
                    quesCategory: 'quesCategory',
                    quesLevel: 'quesLevel',
                    quesType: 'quesType',
                    quesMarks: 'quesMarks',
                    selectedTestDesc: '#selectedTestDesc',
                    selectedTestCategory: '#selectedTestCategory',
                    selectedTestType: '#selectedTestType',
                    selectedTestLevel: '#selectedTestLevel',
                    quesDataContext:'#quesDataContext',
                    tblQuesRecord: '#tblQuesRecord',
                    selectedQues: 'selectedQues',
                    selectAllQuestions: '#selectAllQuestion',
                    addQuestion:'#btnAddQuestion',
                    testQuestions: '#tblTestQuestions',
                    mainMessageContext: '#mainMessageContext',
                    quesMessageContext: '#quesMessageContext',
                    deleteQuestion:'delete-question',
                };
                mapTestQuestion.init(config);

            });

        }(window.jQuery, window, document));
    </script>

}